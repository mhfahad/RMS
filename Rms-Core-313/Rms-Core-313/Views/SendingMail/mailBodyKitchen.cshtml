@model Rms_Core_313.Models.Vm.OrderPlaceVm

<!doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <script src="https://kit.fontawesome.com/yourcode.js"></script>
    <title>Email from Neuron Educare</title>
    <link href="https://localhost:44344/style/Mailbody.css" rel="stylesheet" />
</head>
<body class="">

    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="body">
        <tr>
            <td>&nbsp;</td>
            <td class="container">
                <div class="content">

                    <!-- START CENTERED WHITE CONTAINER -->
                    <table role="presentation" class="main">

                        <!-- START MAIN CONTENT AREA -->
                        <tr>
                            <td class="wrapper">
                                <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td>
                                            <img src="https://localhost:44344/images/Cover.jpg">

                                            <p>Dear @Model.UserId</p>
                                            <p>

                                            </p>

                                            <div class="info">
                                                <h3>your Order is proceesing.</h3>
                                            </div>
                                            <div>
                                                <p>

                                                    Your phone: @Model.ReciverPhone <br>

                                                </p>
                                                @{ var Price = 0.00; }
                                                @foreach (var item in Model.OrderPlaceDetails)
                                                {
                                                    <p>

                                                        Dish name: @item.menusCreate.Name<br>
                                                        Total Quentity: @item.Quantity<br>
                                                        Price: @item.Price
                                                        @{Price += item.Price;}
                                                    </p>
                                                }
                                                <p>
                                                    Total Price: @Price;

                                                </p>
                                            </div>



                                            <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
                                                <tbody>
                                                    <tr>
                                                        <td align="left">
                                                            <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                                                                <tbody>
                                                                    <tr>
                                                                        <td> <a href="#" target="_blank">Sign In</a></td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>


                                            <h3 style="text-align: center;"><b>Contact us - we're here to help you!</b></h3>

                                            <p>
                                                <h4 style="text-align: center;">
                                                    <b>Nimontron</b><br>
                                                    <b>
                                                        9 The Parade, Frimley High Street, Frimley, Surrey
                                                        GU16 7HY
                                                    </b>
                                                    <b>mail@nimontron.co.uk</b><br>
                                                    <b>+44 1276 581878</b>
                                                </h4>
                                            </p>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>

                        <!-- END MAIN CONTENT AREA -->
                    </table>
                    <!-- END CENTERED WHITE CONTAINER -->
                    <!-- START FOOTER -->
                    <div class="social">
                        <a class="glyph fa-facebook" href="https://www.facebook.com/nimontronfrimley/"></a>
                        <a class="glyph fa-twitter" href="https://twitter.com/neuroneducare"></a>
                        <a class="glyph fa-instragram" href="https://www.instagram.com/neuron.educare/"></a>
                        <a class="glyph fa-youtube" href="https://www.youtube.com/channel/UC-Aj8oTnuT3FGjv9q4sZgZw"></a>
                        <a class="glyph fa-linkedin" href="https://www.linkedin.com/company/neuroneducare/"></a>
                    </div>
                    <div class="footer">
                        <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                            <tr>
                                <td class="content-block powered-by">
                                    Powered by <a href="LoopBack">LoopBack</a>.
                                </td>
                            </tr>
                        </table>
                    </div>
                    <!-- END FOOTER -->

                </div>
            </td>
            <td>&nbsp;</td>
        </tr>
    </table>
</body>
</html>